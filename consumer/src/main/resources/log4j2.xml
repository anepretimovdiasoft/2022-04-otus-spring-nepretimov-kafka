<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" >
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <DQLayout format="text"/>
        </Console>
        <File name="dsLog" filename="dsLog.log">
            <PatternLayout>
                <Pattern>%-5level %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %replace{%msg}{}{}%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="ConsoleAppender" />
        </Root>
        <Logger name="ru.diasoft" level="info" additivity="false">
            <AppenderRef ref="dsLog"/>
        </Logger>
    </Loggers>
</Configuration>
